<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#3498db</item>
    </style>
<style name="MyGridView">
    <item name="android:padding">5dp</item>
    <item name="android:scrollbars">none</item>
    <item name="android:verticalSpacing">5dp</item>
    <item name="android:numColumns">4</item>
    <item name="android:listSelector">@android:color/transparent</item>
</style>
    <style name="ToolbarTheme" parent="Theme.AppCompat.Light">
        <!-- 设置 toolbar 溢出菜单的文字的颜色 -->
        <item name="android:textColor">@color/colorblue</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    <!--自定义Picasso加载image-->
    <declare-styleable name="sawa">
        <attr name="circular" format="boolean"></attr>
    </declare-styleable>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>
